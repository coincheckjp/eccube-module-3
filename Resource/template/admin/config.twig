{% extends 'default_frame.twig' %}

{% set menus = ['store', 'plugin', 'plugin_list'] %}

{% block title %}CointCheck画面{% endblock %}
{% block sub_title %}{% endblock %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block main %}
    <form class="form-horizontal" method="post" action="{{ url('plugin_CointCheck_config') }}">
        {{ form_widget(form._token) }}
        <div class="row" id="aside_wrap">
            <div  class="col-md-9">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">CointCheckアクセスキー設定</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body form-horizontal">
                        <p style="margin-top:10px;margin-bottom: 30px;" >
                            <a href="https://coincheck.jp/api_settings" target="_blank">coincheck APIキー設定画面</a>から新たにAPIキーを作成し、「アクセスキー」、「シークレットアクセスキー」を入力して下さい。
                            設定後は、「配送方法設定」→ 「編集」と進み、「支払方法設定」で「ビットコイン決済」をONにして下さい。
                            詳細は<a href="https://coincheck.com/ja/documents/payment/eccube" target="_blank">EC-CUBEにビットコイン決済を導入する方法</a>を参照して下さい。
                        </p>
                        <div class="form-group {% if form.access_key.vars.errors|length %} has-error {% endif %}">
                            <label class="col-sm-4 control-label">アクセスキー<span class="text-danger">*</span></label>
                            <div class="col-sm-8">
                                {{ form_widget(form.access_key) }}
                                {{ form_errors(form.access_key) }}
                            </div>
                        </div>
                        <div class="form-group {% if form.secret_key.vars.errors|length %} has-error {% endif %}">
                            <label class="col-sm-4 control-label">シークレットアクセスキー<span class="text-danger">*</span></label>
                            <div class="col-sm-8">
                                {{ form_widget(form.secret_key) }}
                                {{ form_errors(form.secret_key) }}
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
            <div class="col-md-3" id="aside_column">
                <div id="common_box" class="col_inner">
                    <div id="common_button_box" class="box no-header">
                        <div id="common_button_box__body" class="box-body">
                            <div id="common_button_box__edit_button" class="row text-center">
                                <div class="col-sm-6 col-sm-offset-3 col-md-12 col-md-offset-0">
                                    <button class="btn btn-primary btn-block btn-lg" type="submit">設定</button>
                                </div>
                            </div>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div><!-- /.col -->
        </div>
    </form>
{% endblock main %}
